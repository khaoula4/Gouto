<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:qwerjk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:rotation="0"
    android:rotationX="0"
    android:rotationY="0"
    tools:context=".who">

    <ImageButton
        android:id="@+id/e_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/admi"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/abhl"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        android:onClick="Admin"


        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calisto"
        android:scaleType="centerCrop"
        android:shadowColor="#BE0F0F0F"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Administrateur"
        android:textColor="#3fc5f0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/e_1"

        >

    </TextView>


    <ImageButton
        android:id="@+id/abhl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="abhl"
        android:background="@drawable/phone"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/visi"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/e_1">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calisto"
        android:scaleType="centerCrop"
        android:shadowColor="#BE0F0F0F"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Utilisateur ABHL"
        android:textColor="#3fc5f0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/abhl"

        >

    </TextView>

    <ImageButton
        android:id="@+id/visi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="visit"
        android:background="@drawable/visit"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/abhl">

    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/calisto"
        android:scaleType="centerCrop"
        android:shadowColor="#BE0F0F0F"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Visiteur"
        android:textColor="#3fc5f0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"

        app:layout_constraintTop_toBottomOf="@+id/visi"

        >

    </TextView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68" />



</androidx.constraintlayout.widget.ConstraintLayout>